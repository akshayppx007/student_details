<%- include('partials/header') %>

<%- include('partials/navbar') %>
    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-200">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-9">
  
          <div class="card" style="border-radius: 15px;">
            <div class="card-body">
            <form action="/api/create" method="post">
                <div class="form-group row">
                  <label for="" class="col-4 col-form-label">Name</label> 
                  <div class="col-8">
                    <div class="input-group">
                      <div class="input-group-prepend">
                      <input id="" name="name" type="text" required="required" class="form-control">
                    </div>
                  </div>
                </div>
                <div class="form-group row form1">
                  <label for="select" class="col-4 col-form-label">Select</label> 
                  <div class="col-8">
                    <select id="selecter" name="select" class="custom-select" required="required">
                      <option value="Hostel">Hostel</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                </div>
                <div class="form-group row form1">
                  <label for="textarea" class="col-4 col-form-label">Current Address</label> 
                  <div class="col-8">
                    <textarea id="textarea" name="currentAddress" cols="40" rows="3" class="form-control"></textarea>
                  </div>
                </div>
                <div class="form-group row form1" id="pAddress" style="display:none;">
                  <label for="textarea1" class="col-4 col-form-label">Permanent Address</label> 
                  <div class="col-8">
                    <textarea id="textarea1" name="permanentAddress" cols="40" rows="3" class="form-control"></textarea>
                  </div>
                </div> 
                <div class="form-group row form1">
                  <div class="offset-4 col-8">
                    <button name="submit" type="submit" class="btn btn-primary">Submit</button>
                  </div>
                </div>
              </form>
              
            </div>
          </div>
  
        </div>
      </div>
    </div>
            
  </section>
  <%- include('partials/footer') %>